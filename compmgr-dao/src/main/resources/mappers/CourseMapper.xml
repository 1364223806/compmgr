<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="edu.zut.cs.curriculum.dao.CourseMapper">
    <select id="getAllCourse"  resultType="edu.zut.cs.curriculum.model.Course">
        select id,courseNum,courseName,period,credit
        from t_course
    </select>
    <select id="getCourseNameById" parameterType="Integer"  resultType="java.lang.String">
        select courseNum
        from t_course
        where id=#{id}
    </select>
    <select id="getPeriodByCourseName" parameterType="java.lang.String"  resultType="Integer">
        select period
        from t_course
        where courseName=#{CourseName}
    </select>

</mapper>